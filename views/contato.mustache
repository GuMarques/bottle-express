<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="stylesheets/navbar.css" rel="stylesheet" type="text/css" />
    <title>O Forte Carvalho</title>
  </head>
  <body>
    <div class="container site-wrap">
      <div class="cabecalho">
        <div class="cabecalho-container">
          <div class="cabecalho-esquerda">
            <div class="logo">
              <a to="#">
                <img src="images/logo.png" alt="logo"/>
              </a>
            </div>
          </div>
        </div>
        <div class="menu-container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Home</a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/descricao">Sobre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/ferramentas">Ferramentas e Tecnologias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/time">Nosso Time</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/contato">Entre em Contato</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
      </div>
      <div class="corpo-container">
        <div class="my-5 mx-5">
          <h1 class="text-center mb-3">Entre em Contato</h1>
            <div class="container py-4">
                <form action="mailto:netoneze@hotmail.com" method="post" encType="text/plain">
                    <div class="form-group mb-3">
                        <label for="FormControlInputNome">Nome</label>
                        <input type="text" name="Nome" class="form-control" id="FormControlInputNome"
                               placeholder="Digite seu nome" required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="FormControlInputEmail">Email</label>
                        <input type="email" name="Email" class="form-control" id="FormControlInputEmail"
                               placeholder="Digite seu email" required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="FormControlInputAssunto">Assunto</label>
                        <input type="text" name="Assunto" class="form-control" id="FormControlInputAssunto"
                               placeholder="Digite o assunto" required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="FormControlTextareaMensagem">Mensagem</label>
                        <textarea name="Mensagem" class="form-control" id="FormControlTextareaMensagem" rows="3" placeholder="Digite sua mensagem" required></textarea>
                    </div>
                    <button type="submit" value="Submit" class="btn btn-outline-dark">Enviar</button>
                </form>
            </div>
        </div>
      </div>
    </div>
    <div class="footer">
        <footer class="footer mt-1 mb-2 bg-light text-center">
            <div class="container">
                <div class="logo center">
                    <a to="#">
                        <img src="images/logo.png" alt="logo"/>
                    </a>
                </div>
                <span class="text-muted">Todos os direitos reservados. 2021</span>
            </div>
        </footer>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>